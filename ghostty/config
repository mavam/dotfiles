# Shell
shell-integration = fish
clipboard-paste-protection = false

# Disable OSC 10/11/12 color query responses. When enabled (default), programs
# like Starship query terminal colors for theme detection, but the responses can
# leak as visible garbage (e.g., ^[]11;rgb:ffff/ffff/ffff^\) due to timing races.
osc-color-report-format = none

# Colors.
theme = dark:GitHub Dark Default,light:GitHub Light Default
#background = #111111

# Window styling.
background-opacity = 0.95
background-blur-radius = 20
macos-titlebar-style = tabs
window-colorspace = display-p3
window-padding-x = 5
window-padding-y = 5
window-padding-balance = true

# Fonts.
font-family = FiraCode Nerd Font Mono
font-size = 13
adjust-cell-height = 15%

# Quick terminal.
keybind = global:shift+ctrl+option+cmd+t=toggle_quick_terminal
quick-terminal-animation-duration = 0.25
